<div class='col-xs-4 col-xs-offset-4 text-center'>
    <div class="jumbotron public">
        <img src="http://unizol.com/uploads/placeholder.jpg" class="img-responsive img-circle userProfileImage" alt="User Profile Image" width="100" height="100"> 
        <h3>{{user.displayname}}</h3>
    </div>
</div>

<div class='col-xs-10 col-xs-offset-1'>
    <div class="grid" id='userImages'>
      <div class="grid-sizer"></div>
      
      {{#each images}}
      <div class="grid-item">
        <img src="{{this.url}}" id="{{this._id}}" />
        <a href="#" class="remove"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </div>
      {{/each}}

    </div>
 </div>
 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script>
    <script type="text/javascript" src="/js/scripts.js"></script>  
  </body>
